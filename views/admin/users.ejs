<h4>Kelola User</h4>
<table class="table">
  <thead><tr><th>Username</th><th>Email</th><th>Saldo</th><th>Aksi</th></tr></thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.username %></td>
        <td><%= u.email %></td>
        <td>Rp <%= u.saldo.toLocaleString() %></td>
        <td>
          <form method="POST" action="/admin/users/<%= u.id %>/saldo" class="d-inline">
            <input type="number" name="jumlah" placeholder="Tambah Saldo" class="form-control form-control-sm d-inline w-auto" />
            <button class="btn btn-sm btn-success">Kirim</button>
          </form>
          <form method="POST" action="/admin/users/<%= u.id %>/delete" class="d-inline ms-2">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Yakin hapus?')">Hapus</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
